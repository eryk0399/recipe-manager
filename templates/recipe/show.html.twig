{% extends 'base.html.twig' %}

{% block title %}{{ recipe.title }}{% endblock %}

{% block body %}
  <h1 class="my-3 border-bottom pb-3">{{ recipe.title }}</h1>
  <div>
    <a class="btn btn-warning" href="/recipes/edit/{{ recipe.id }}">Edit</a>
    <a class="btn btn-danger ms-2" href="/recipes/delete/{{ recipe.id }}">Delete</a>
  </div>
  <div class="row">
    <div class="col-lg-6">
    <h3 class="mt-3">Ingredients</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Amount</th>
        </tr>
      </thead>
      <tbody>
      {% for ingredient in recipe.ingredients %}
        <tr>
          <th scope="row">{{ loop.index }}</th>
          <td>{{ ingredient.name }}</td>
          <td>{{ ingredient.amount }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-lg-6">
    
</div>
<div class="row">
  <h3 class="mt-3">Instructions</h3>
    <ul class="list-group list-group-flush">
      {% for instruction in recipe.instructions %}
        <li class="list-group-item">{{ instruction}}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endblock %}
