{% extends 'base.html.twig' %}

{% block title %}{{ recipe.title }}{% endblock %}

{% block body %}

<h1 class="mt-3 border-bottom pb-3">{{ recipe.title }}</h1>
<div>
  <a class="btn btn-primary" href="/recipes/edit/{{ recipe.id }}">Edit</a>
  <a class="btn btn-danger" href="/recipes/delete/{{ recipe.id }}">Delete</a>
</div>
<h3 class="mt-3">Ingredients</h3>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody>
  {% for ingredient in recipe.ingredients %}
    <tr>
      <th scope="row">{{ loop.index }}</th>
      <td>{{ ingredient.name }}</td>
      <td>{{ ingredient.amount }}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>
<h3 class="mt-3">Instructions</h3>
<ul class="list-group list-group-flush">
  {% for instruction in recipe.instructions %}
    <li class="list-group-item">{{ instruction}}</li>
  {% endfor %}
</ul>

{% endblock %}
